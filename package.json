{
  "name": "wikipedia-preview",
  "version": "1.2.1",
  "description": "Shows Wikipedia article preview in a popup",
  "main": "dist/wikipedia-preview.production.js",
  "scripts": {
    "test": "mocha --require ignore-styles,@babel/register,jsdom-global/register",
    "test:watch": "mocha --require ignore-styles,@babel/register,jsdom-global/register -w",
    "test:fix-lint": "eslint test --fix",
    "coverage": "nyc npm test",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build": "npm run build:dev && npm run build:prod",
    "dev": "webpack-dev-server --mode development --host=0.0.0.0 --disable-host-check",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "wba": "npm run build:prod && npx webpack-bundle-analyzer dist/stats.json"
  },
  "author": "Wikimedia Foundation",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/html": "^6.0.21",
    "babel-loader": "^8.1.0",
    "bufferutil": "^4.0.1",
    "canvas": "^2.6.1",
    "compression-webpack-plugin": "^4.0.1",
    "crypto-js": "^4.0.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.8.1",
    "eslint-config-wikimedia": "0.20.0",
    "eslint-loader": "^4.0.2",
    "ignore-emit-webpack-plugin": "^2.0.3",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "less": "^3.12.2",
    "less-loader": "^5.0.0",
    "less-plugin-inline-svg": "^2.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.2.0",
    "null-loader": "^4.0.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.3",
    "style-loader": "^1.2.1",
    "stylelint-config-wikimedia": "^0.10.1",
    "stylelint-no-unsupported-browser-features": "^4.1.4",
    "stylelint-webpack-plugin": "^2.1.0",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "dompurify": "^2.1.0"
  }
}
